using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.UI;

public class IndicatorHealth : MonoBehaviour
{
    [SerializeField] private Slider _slider;

    private int _maxValue = 100;
    private int _minValue = 0;
    private float _speed = 0.1f;
    private float _target;

    public float SliderValue => _slider.value;

    private void Start()
    {
        _slider.maxValue = _maxValue;
        _slider.minValue = _minValue;
    }

    private void Update()
    {
        _slider.value = Mathf.MoveTowards(_slider.value, _target, _speed);
    }

    public void ChangeHealth(int healtValue)
    {
        _target = _slider.value + healtValue;
    }
}
