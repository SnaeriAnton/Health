using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.Events;

public class PlayerHealth : MonoBehaviour
{
    public UnityAction<bool> TreatedHealth;

    public void Treat()
    {
        bool increaseHealth = true;
        TreatedHealth?.Invoke(increaseHealth);
    }

    public void Damage()
    {
        bool decreaseHealth = false;
        TreatedHealth?.Invoke(decreaseHealth);
    }
}
