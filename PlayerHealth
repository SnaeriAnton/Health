using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.UI;

public class PlayerHealth : MonoBehaviour
{
    [SerializeField] private ManagerHealth _managerHealth;

    private int _valueHealth = 10;
    private int _target;

    public void Treat()
    {
        _target = _valueHealth;
        _managerHealth.TransfetValueHealth(_target);
    }
    public void Damage()
    {
        _target = - _valueHealth;
        _managerHealth.TransfetValueHealth(_target);
    }
}
